<%- include('includes/head', {title:"safeVan - Cadastro"}) %>
<body>
    <%- include('includes/header') %>
    <main class="auth-fundo vh-100 w-100 text-white">        
        <div class="container-fluid justify-content-center align-items-center">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5 light bg-dark">
                        <div class="card-body">
                            <form method="POST">
                               <h2>Dados da Criança</h2>
                               <p class="text-warning">É obrigatório preencher todos os campos*</p>
                                <div class="form-group">
                                    <label for="nameCrianca">Nome da Criança*</label>
                                    <input type="text" class="form-control" name="nameCrianca" placeholder="Digite aqui o nome da sua criança">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="birthdateCrianca">Data de Nascimento da Criança*</label>
                                    <input type="date" name="birthdateCriança" class="form-control">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="nomeEscola">Escola*</label>
                                    <input type="text" class="form-control" id="nomeEscola" placeholder="Digite o nome da Escola">
                                    </div>                                    
                                </div>

                                <div class="form-group">
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="termos" checked>
                                    <label class="form-check-label" for="termos">
                                        <a href="https://modeloinicial.com.br/peticao/11199497/contrato-transporte-escolar">Concordo com os termos e condições</a> 
                                    </label>
                                  </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-warning">Enviar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('includes/footer') %>
</body>
</html>