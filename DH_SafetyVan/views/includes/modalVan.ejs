<!-- Modal -->
<div class="modal" id="modalVan" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h4 class="modal-title text-white" style="text-align: center;">Adicionar dados da van</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/editar/adicionaisVan" method="post" >
                    <div class="form-group">
                        <label for="nameAjudante">ajudante</label>
                        <input type="text" id="nameAjudante" name="nameAjudante" class="form-control" placeholder="voce possui um ajudante? se sim qual seu nome?"> 
                    </div>
                    <div class="form-group">
                        <label for="qntCrianca">Quantidade de crianças na van</label>
                        <input type="number" id="qntCrianca" name="qntCrianca" class="form-control" placeholder="quantas crianças tem na sua van">
                    </div>
                    <div class="form-group">
                        <label for="idiomas">Idiomas</label>
                        <input type="text" id="idiomas" name="idiomas" class="form-control" placeholder="Digite os idiomas que voce fala">
                    </div>
                    <div class="form-check mt-1">
                        <input class="form-check-input" type="radio" id="selecResp" name="cadeiraRoda" value="cadeiraRoda" >
                        <label class="form-check-label d-block" for="cadeiraRoda">Tenho acesso a cadeira de roda</label>
                        <input class="form-check-input" type="radio" id="selecMotorista" name="cadeirinha" value="cadeirinha" >
                        <label class="form-check-label" for="cadeirinha">Tenho cadeirinha </label>
                    </div>
                    <button type="submit" class="btn btn-warning mt-2">Alterar minhas informações</button>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info btn-lg" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>