<%- include('includes/head', {title:"safeVan - Cadastro"}) %>
<body>
    <%- include('../public/javascripts/buscaCep.js') %>
    <%- include('../public/javascripts/validacaoFormulario.js')  %> 
    <%- include('includes/header') %>
    <main class="cad-driver text-white">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5 light bg-dark">
                        <div class="card-body">
                            <form action="/user/driver" method="POST" id="form-cadastro">
                                <h2>Cadastro de Motorista</h2>
                                <p class="text-warning">É obrigatório preencher todos os campos*</p>
    
                                
                                <div class="form-group">
                                    <label for="name">Nome completo*</label>
                                    <input type="text"class="form-control" id="nome" name="name" value="<%= user.name %> ">
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="cpf">CPF*</label>
                                        <input type="text" class="form-control"  id="cpf" name="cpf" placeholder="000.000.000-00">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="birthdate">Data de Nascimento*</label>
                                        <input type="date" class="form-control" name="birthdate" id="date">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="phone">Telefone*</label>
                                        <input type="tel" class="form-control" name="phone" placeholder="11999888777" id="fone">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="cep">CEP*</label>
                                    <input type="text" id="cep" class="form-control w-50" name="cep" placeholder="00000-000" onblur="pesquisacep(this.value)">
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-9">
                                        <label for="rua">Endereço*</label>
                                        <input type="text" id="end" class="form-control" name="rua" id="rua" placeholder="Rua, Avenida, Logradouro">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="complemento">Número*</label>
                                        <input type="text" id="numCasa" class="form-control" name="complemento" placeholder="Número">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="bairro">Bairro *</label>
                                        <input type="text" id="bairro" class="form-control" name="bairro" id="bairro" placeholder="Bairro">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="cidade">Cidade *</label>
                                        <input type="text" id="cidade" class="form-control" name="cidade" id="cidade" placeholder="Cidade">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="uf">Estado*</label>
                                        <input type="text" id="estado" name="uf" id="uf" class="form-control" placeholder="UF">
                                    </div>
                                </div>
                                
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="cnh">CNH:*</label>
                                        <input type="text" id="cnh" class="form-control" name="cnh" placeholder="Número CNH">
                                    </div>
                                    
                                    <div class="form-group col-md-6">
                                        <label for="crm">CRM:*</label>
                                        <input type="text" id="crm" class="form-control" name="crm" placeholder="Número CRM">
                                    </div>
                                </div>                               

                                <h3>Dados do Veículo</h3>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="veiculo">Marca:*</label>
                                        <input type="text" id="marca" class="form-control" name="marca" placeholder="Marca">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="veiculo">Modelo:*</label>
                                        <input type="text" id="modelo" class="form-control" name="modelo" placeholder="Modelo">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="ano">Ano de Fabricação: *</label>
                                        <input type="text" id="anoFab" class="form-control" name="ano" placeholder="Ano de fabricação">
                                    </div>
                                </div>
                                
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="placa">Placa:*</label>
                                        <input type="text" id="placa" class="form-control" name="placa" placeholder="Placa do veículo">
                                    </div>    
                                    <div class="form-group col-md-8">
                                        <label for="crm">CRMC: *</label>
                                        <input type="text" id="crmc" class="form-control" name="crmc" placeholder="Número CRMC">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="termos" checked>
                                        <label class="form-check-label" for="termos">
                                            <a href="https://modeloinicial.com.br/peticao/11199497/contrato-transporte-escolar">Concordo com os termos e condições</a> 
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div id="error-list" class="alert alert-danger alert-dismissible fade show" role="alert" hidden>
                                        <ul>

                                        </ul>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Enviar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('includes/footer') %>
</body>
</html>