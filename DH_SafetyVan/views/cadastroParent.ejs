<%- include('includes/head', {title:"safeVan - Cadastro"}) %>
<body>
    <%- include('includes/header') %>
    <main class="auth-fundo text-white">        
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5 light bg-dark">
                        <div class="card-body">
                            <form action="/user/parent" method="POST">
                               <h2>Cadastro de Responsável</h2>
                               <p class="text-warning">É obrigatório preencher todos os campos*</p>
                                <div class="form-group">
                                    <label for="name">Nome completo*</label>
                                    <input type="text"class="form-control" name="name" value="<%= user.name %> ">
                                </div>
                                <div class="form-row">

                                    <div class="form-group col-md-4">
                                        <label for="cpf">CPF*</label>
                                        <input type="text" class="form-control" name="cpf" placeholder="000.000.000-00">
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label for="birthdate">Data de Nascimento*</label>
                                        <input type="date" class="form-control" name="birthdate">
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label for="phone">Telefone*</label>
                                        <input type="tel" class="form-control" name="phone" placeholder="11999888777">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="cep">CEP*</label>
                                    <input type="text" class="form-control w-50" name="cep" placeholder="00000-000" onblur="pesquisacep(this.value)">
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-9">
                                        <label for="rua">Endereço*</label>
                                        <input type="text" class="form-control" name="rua" id="rua" placeholder="Rua, Avenida, Logradouro">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="complemento">Número*</label>
                                        <input type="text" class="form-control" name="complemento" placeholder="Número">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="bairro">Bairro *</label>
                                        <input type="text" class="form-control" name="bairro" id="bairro" placeholder="Bairro">
                                    </div>
                                    <div class="form-group col-md-5">
                                        <label for="cidade">Cidade *</label>
                                        <input type="text" class="form-control" name="cidade" id="cidade" placeholder="Cidade">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label for="uf">Estado*</label>
                                        <input type="text" name="uf" id="uf" class="form-control" placeholder="UF">
                                    </div>
                                </div>

                                <div class="form-group">
                                  <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="termos" checked>
                                    <label class="form-check-label" for="termos">
                                        <a href="https://modeloinicial.com.br/peticao/11199497/contrato-transporte-escolar">Concordo com os termos e condições</a> 
                                    </label>
                                  </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-warning">Enviar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('includes/footer') %>
    <%- include('../public/javascripts/buscaCep.js') %>
</body>
</html>