<%- include('includes/head', {title:"safeVan - Cadastrar"}) %>

<body>
    <%- include('includes/header') %>
    <main class="auth-fundo vh-100 w-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto ">
                    <div class="card card-signin my-5 light bg-dark">
                        <div class="card-body card-form">
                            <h2 id="tituloMsg" class="text-white">Editar o perfil</h2>
                            <div id="botoes">
                                <div class="form-group mt-2">
                                    <lauer id="car_change" class="btn btn-warning text-white">Alterar informações
                                        do
                                        carro</lauer>
                                </div>
                                <div class="form-group mt-2">
                                    <lauer id="info_change" class="btn btn-warning text-white">Alterar "sobre mim"</lauer>
                                </div>
                                <div class="form-group mt-2">
                                    <lauer id="telefone_change" class="btn btn-warning text-white">Alterar meu telefone</lauer>
                                </div>
                                <div class="form-group mt-2">
                                    <lauer id="email_change" class="btn btn-warning text-white">Alterar meu email</lauer>
                                </div>
                            </div>

                            <div id="carro">
                                 <form action="/editar/carro" method="POST">
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="veiculo" class="text-white">Marca:*</label>
                                            <input type="text" class="form-control" name="marca" placeholder="Marca">
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="veiculo" class="text-white">Modelo:*</label>
                                            <input type="text" class="form-control" name="modelo" placeholder="Modelo">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="ano" class="text-white">Ano *</label>
                                            <input type="text" class="form-control" name="ano"
                                                placeholder="Ano de fabricação">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="placa" class="text-white">Placa:*</label>
                                            <input type="text" class="form-control" name="placa"
                                                placeholder="Placa do veículo">
                                        </div>
                                        <div class="form-group col-md-8">
                                            <label for="crm" class="text-white">CRMC: *</label>
                                            <input type="text" class="form-control" name="crmc"
                                                placeholder="Número CRMC">
                                        </div>
                                        <br>
                                         <div class="form-group">
                                            <button type="submit" class="btn btn-warning  text-white">Alterar</button>
                                        </div> 
                                    </div>
                                    
                                </form> 
                                <button id="voltarCarro" class="btn btn-warning text-white fixed-right">voltar</button>
                            </div> 


                            <div id="pessoa">
                                <form action='/editar/sobre' method='POST'>
                                    <textarea id="sobre" name="sobre" rows="5"
                                        cols="33">conte um pouco sobre voce</textarea>
                                    <br>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-warning text-white">Alterar</button>
                                    </div>
                                </form>
                                <lauer id="voltarPessoa" class="voltar btn btn-warning text-white">voltar</lauer>

                            </div>
                            <div id="telefoneConfig">
                                <form action='/editar/telefone' method='POST'>
                                    <div class="form-group col-md-4">
                                        <label for="telefone" class="text-white">Seu novo telefone:*</label>
                                        <input  style="width: auto;" type="text" class="form-control" name="telefone" placeholder="Telefone">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-warning text-white">Alterar</button>
                                    </div>
                                </form>
                                <lauer id="voltarTelefone" class="voltar btn btn-warning text-white">voltar</lauer>
                            </div>
                            <div id="emailConfig">
                                <form action='/editar/email' method='POST'>
                                    <div class="form-group col-md-4">
                                        <label for="email" class="text-white">Seu novo Email:*</label>
                                        <input  style="width: auto;" type="text" class="form-control" name="email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-warning text-white">Alterar</button>
                                    </div>
                                </form>
                                <lauer id="voltarEmail" class="voltar btn btn-warning text-white">voltar</lauer>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('includes/footer') %>
    <script src="javascripts/edicao.js"></script>
</body>

</html>